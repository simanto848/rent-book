{{> stylesheetlinks}}
{{> navbar}}

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each books}}
            <div class="col">
                <div class="card">
                    <a href="/{{this.id}}/view" class="link">
                        <img src="{{this.picture}}" class="card-img-top" alt="Cover Page">
                    </a>
                    <div class="card-body">
                        <a href="/{{this.id}}/view"><h5 class="card-title text-center fs-4 text-capitalize mb-2">{{this.title}}</h5></a>
                        <p class="card-text text-capitalize mb-1">{{this.author}}</p>
                        <p class="text-muted text-capitalize mb-1">{{this.language}}</p>
                        <p class="text-muted text-capitalize mb-1">Category: {{this.category.name}}</p>
                        <small class="text-muted text-capitalize">Posted by: {{this.user.username}}</small> <br>
                        <strong class="text-muted text-capitalize mt-3 mb-0">Price: <b>{{this.price}}</b> tk</strong>
                    </div>
                    <div class="card-footer text-center">
                        <form action="/cart/{{this.id}}" method="post">
                            <button type="submit" class="btn btn-success">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

